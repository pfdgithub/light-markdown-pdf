{
  "name": "light-markdown-pdf",
  "version": "1.0.1",
  "description": "Lightweight conversion scheme from markdown to pdf",
  "main": "src/index.js",
  "bin": {
    "lmp": "bin/lmp.js"
  },
  "scripts": {
    "build": "node bin/lmp.js --sourceDir . --targetFile $npm_package_name@$npm_package_version.pdf --fontName PingFang --fontFile ./src/asset/PingFang-SC-Regular.ttf --coverTitle $npm_package_name --coverAuthor $npm_package_author_name --coverVersion $npm_package_version"
  },
  "license": "MIT",
  "author": "pfdgithub",
  "homepage": "https://github.com/pfdgithub/light-markdown-pdf#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pfdgithub/light-markdown-pdf.git"
  },
  "keywords": [
    "light",
    "markdown",
    "pdf",
    "lightweight",
    "conversion",
    "ast",
    "commonmark",
    "pdfkit"
  ],
  "engines": {
    "node": ">=8.0.0"
  },
  "dependencies": {
    "codemirror": "^5.57.0",
    "commander": "^6.0.0",
    "commonmark": "^0.29.1",
    "image-size": "^0.8.3",
    "pdfkit": "^0.11.0"
  }
}
